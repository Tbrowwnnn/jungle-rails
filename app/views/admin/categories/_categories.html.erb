<section class="categories-show">

  <header class="page-header">
    <h1>
      <%= @category.name %>
      <small>(<%= pluralize @products.size, 'product' %>)</small>
    </h1>
  </header>

  <div class="categories">
  <% Category.all.each do |category| %>
    <li class="nav-item">
      <%= category.name, category %>
    </li>
  </div>

</section>